               input.form-control.col-md-6(name="code" type="text")
            .form-group.form-inline.row
               label.col-md-5(style="justify-content: left; padding-left: 40px") 
                  strong Product Name
               input.form-control.col-md-6(name="name" type="text")
            .form-group.form-inline.row
               label.col-md-5(style="justify-content: left; padding-left: 40px")
                  strong Category
               input.form-control.col-md-6(name="code" type="text")
            .form-group.form-inline.row
               label.col-md-5(style="justify-content: left; padding-left: 40px")  
                  strong Product Amount
               input.form-control.col-md-6(name="amount" type="text")
            button.btn.btn-success.mt-5 Add