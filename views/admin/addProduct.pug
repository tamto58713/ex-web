block header
      a(href="/admin")
         button(class=" btn btn-primary ml-1") Admin HomePage
      br
      a(href="/admin/products")
         button(class="btn btn-primary mt-2" style="margin-left: 6.1em") Back
      .bg-light.w-50.m-auto.h-60(style="text-align: center")
         h3(style="padding-top: 10px") Add Product
         .form(style="width: 100%; padding-top: 40px")
